{
  "compilerOptions": {
    // "target": "ES2017",
    "lib": ["dom", "es2017", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "styled.d.ts",
    "global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": ["dist", ".next", "out", "next.config.js", "node_modules"]
}
